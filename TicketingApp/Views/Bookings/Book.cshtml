@{
    ViewData["Title"] = "Book";
}
@model TicketingApp.Models.Views.BookViewData

<h1>Booking place for @Model.Concert.Artist</h1>
<span>Price : @Model.Concert.Price</span>
<form method="post" asp-action="Booking">
    <input type="hidden" value="@Model.Concert.Id" asp-for="Booking.ConcertId"/>
    <input type="hidden" value="@Model.Concert.Price" asp-for="Booking.Price"/>

    <br/>
    <div class="form-group">
        <label for="emailInput">Email</label>
        <input asp-for="Booking.Email" type="email" class="form-control" id="emailInput" placeholder="Enter your email">
    </div>
    <div class="form-group">
        <label for="paymentType">Payment</label>
        <input asp-for="Booking.PaymentType" type="text" class="form-control" id="paymentType" placeholder="Enter your Payment mean">
    </div>
    <button type="submit" class="btn btn-primary m">Send</button>
</form>